<!-- Validation failure messages -->

<% if @pdescription.errors.any? %>
  <% @pdescription.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Pdescription #<%= @pdescription.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_pdescription/<%= @pdescription.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for book_id -->
          <div class="form-group">
            <label for="book_id" class="col-sm-2 control-label">
              Book
            </label>
            <div class="col-sm-10">
              <input type="text" id="book_id" name="book_id" placeholder="Book" class="form-control" value="<%= @pdescription.book_id %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @pdescription.description %>">
            </div>
          </div>

          <!-- Label and input for professor_id -->
          <div class="form-group">
            <label for="professor_id" class="col-sm-2 control-label">
              Professor
            </label>
            <div class="col-sm-10">
              <input type="text" id="professor_id" name="professor_id" placeholder="Professor" class="form-control" value="<%= @pdescription.professor_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Pdescription
              </button>
              or
              <a href="/pdescriptions/<%= @pdescription.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->

<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Course #<%= @course.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name and title</dt>
              <dd><%= @course.name_and_title %></dd>

              <dt>User</dt>
              <dd><%= @course.user_id %></dd>

              <dt>Department</dt>
              <dd><%= @course.department_id %></dd>

              <dt>Name</dt>
              <dd><%= @course.name %></dd>

              <dt>Number</dt>
              <dd><%= @course.number %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/courses" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/courses/<%= @course.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_course/<%= @course.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Book Keyword #<%= @book_keyword.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Keyword</dt>
              <dd><%= @book_keyword.keyword_id %></dd>

              <dt>Book</dt>
              <dd><%= @book_keyword.book_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/book_keywords" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/book_keywords/<%= @book_keyword.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_book_keyword/<%= @book_keyword.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
